---
import { locales } from "@/consts";
import { getLocalePath } from "@/i18n/utils";
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { GetStaticPaths } from "astro";
import { Image } from "astro:assets";
const friends = [
  {
    title: "Arthals' ink",
    description: "所见高山远木，阔云流风；\n所幸岁月盈余，了无拘束。",
    link: "https://arthals.ink/",
    avatar: "https://cdn.arthals.ink/Arthals.png",
  },
  {
    title: "糖菓·部落",
    description: "Never drown the flame of hope",
    link: "https://candinya.com",
    avatar: "https://candinya.com/images/candinya.webp",
  },
];

export const getStaticPaths = (() => {
  return locales.map((locale) => ({
    params: { locale: getLocalePath(locale) },
    props: { locale },
  }));
}) satisfies GetStaticPaths;
---

<BaseLayout description={"友链传送门"} title={"CCLIN FRIENDS"}>
  <div class="grid grid-cols-1 gap-4 lg:grid-cols-2">
    {
      friends.map(({ title, description, link, avatar }) => (
        <a class="flex h-18 items-center rounded-3xl border p-4" href={link}>
          <Image
            alt={`${title}'s avatar`}
            class="size-16 rounded-full"
            height={32}
            src={avatar}
            width={32}
          />
          <div class="pl-2">
            <div>{title}</div>
            <div class="text-sm whitespace-pre">{description}</div>
          </div>
        </a>
      ))
    }
  </div>
</BaseLayout>
