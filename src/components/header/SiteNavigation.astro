---
import { SocialLinks } from "@/consts";
import { getRelativeLocaleUrl } from "astro:i18n";
import LanguagePicker from "./LanguagePicker.astro";
import ThemePicker from "./ThemePicker.astro";
const ui = {
  zh: {
    "nav.posts": "文章",
    "nav.tags": "标签",
    "nav.portal": "朋友",
    "nav.about": "关于",
  },
  en: {
    "nav.posts": "Posts",
    "nav.tags": "Tags",
    "nav.portal": "Portal",
    "nav.about": "About",
  },
} as const;

const locale = Astro.currentLocale as keyof typeof ui;
---

<nav class="text-center font-bold" flex="~ col gap-4">
  <ul
    class="text-3.5"
    flex="~ row gap-2 justify-center"
    lg="flex-col items-start text-4 ml-4"
  >
    <li>
      <a href={getRelativeLocaleUrl(locale)}>{ui[locale]["nav.posts"]}</a>
    </li>
    <li>
      <a href={getRelativeLocaleUrl(locale, "tags")}>{ui[locale]["nav.tags"]}</a
      >
    </li>
    <li>
      <a href={getRelativeLocaleUrl(locale, "portal")}
        >{ui[locale]["nav.portal"]}</a
      >
    </li>
    <li>
      <a href={getRelativeLocaleUrl(locale, "about")}
        >{ui[locale]["nav.about"]}</a
      >
    </li>
  </ul>
</nav>
<div lg="ml-4">
  <ul class="h6" flex="~ row gap-1 justify-center">
    {
      SocialLinks.map(({ href, name, icon }) => (
        <li>
          <a
            class="not-underline-hover inline-flex items-center"
            href={href}
            target="_blank"
            title={name}
          >
            <span class:list={[icon, "h-6 w-6"]} />
          </a>
        </li>
      ))
    }
  </ul>
  <LanguagePicker />
  <ThemePicker />
</div>
