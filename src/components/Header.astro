---
import HeaderLink from "./HeaderLink.astro";
// import { Image } from "astro:assets";

// import { SITE_TITLE } from "../consts";
---

<header>
  <div class="neu-box">
    <h1>我的现代简约博客</h1>
    <nav>
      <HeaderLink href="/">
        <button class="neu-button" id="home">首页</button></HeaderLink
      >
      <HeaderLink href="/about">
        <button class="neu-button" id="about">关于</button></HeaderLink
      >
    </nav>
  </div>
  <style>
    .neu-box {
      border-radius: 15px;
      background: var(--surface);
      box-shadow:
        5px 5px 15px var(--shadow-dark),
        -5px -5px 15px var(--shadow-light);
      padding: 20px;
      margin-bottom: 20px;
    }
    h1 {
      text-align: center;
      color: var(--text-color);
      font-size: 2.2em;
      margin-bottom: 20px;
      letter-spacing: 1px;
    }
    nav {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
    }
    .neu-button {
      padding: 10px 20px;
      border: none;
      border-radius: 8px;
      background: var(--surface);
      color: var(--text-color);
      font-size: 1em;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow:
        3px 3px 6px var(--shadow-dark),
        -3px -3px 6px var(--shadow-light);
      margin: 0 10px;
    }
    .neu-button:hover,
    .neu-button:focus {
      box-shadow:
        inset 3px 3px 6px var(--shadow-dark),
        inset -3px -3px 6px var(--shadow-light);
      color: var(--accent-color);
    }
  </style>
</header>
