---
import BaseHead from "../components/BaseHead.astro";

import Header from "../components/Header.astro";
const { title }: { title: string } = Astro.props.frontmatter || Astro.props;
const { description } = Astro.props || "";
---

<!doctype html>
<html lang="zh">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <div class="flex flex-col h-full max-w-6xl min-w-96 mx-auto p-8 lg:py-0 lg:px-20 lg:grid lg:grid-cols-[3fr_1fr] lg:grid-rows-[1fr_9rem]">
      <Header />
      <div class="lg:row-start-1 lg:row-end-3 lg:col-start-1 lg:col-end-2">
      <slot />
    </div>
    <footer class="lg:row-start-2 lg:row-end-3 lg:col-start-2 col-end-3">footer</footer>
    </div>
  </body>
</html>
